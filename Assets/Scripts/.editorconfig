root = true

[*.cs]

indent_style = space
indent_size = 4
tab_width = 4

end_of_line = crlf
insert_final_newline = true

csharp_new_line_before_open_brace = none
csharp_preserve_single_line_statements = true
csharp_preserve_single_line_blocks = true

dotnet_naming_rule.constants_should_be_uppercase_with_underscores.severity = suggestion
dotnet_naming_rule.constants_should_be_uppercase_with_underscores.symbols = constant_fields
dotnet_naming_rule.constants_should_be_uppercase_with_underscores.style = uppercase_with_underscores

dotnet_naming_rule.methods_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.methods_should_be_pascal_case.symbols = method_symbols
dotnet_naming_rule.methods_should_be_pascal_case.style = pascal_case

dotnet_naming_rule.variables_should_be_camel_case.severity = suggestion
dotnet_naming_rule.variables_should_be_camel_case.symbols = variable_symbols
dotnet_naming_rule.variables_should_be_camel_case.style = camel_case

dotnet_naming_symbols.constan
